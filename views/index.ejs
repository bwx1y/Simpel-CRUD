<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('./components/head.bootstrap.ejs') %>
    <title>Database</title>
  </head>
  <body>
    <%- include('./components/Navbar.ejs') %>
    <div class="container">
      <div class="row mt-4">
        <div class="col">
          <a href="/add" class="btn btn-outline-primary">Add</a>
        </div>
      </div>
      <div class="row mt-2 justify-content-center">
        <div class="col">
          <table class="table text-center">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nama</th>
                <th scope="col">Jumlah</th>
                <th scope="col">Harga</th>
                <th scope="col" colspan="2">Edit</th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(e => { %>
              <tr>
                <td><%= e.id %></td>
                <td><%= e.namaBarang %></td>
                <td><%= e.jumlahBarang %></td>
                <td>Rp. <%= e.hargaBarang %></td>
                <td><a href="/edit/<%= e.id %>" class="btn btn-outline-primary">Edit</a></td>
                <td><a href="/delete/<%= e.id %>" class="btn btn-outline-primary">Delete</a></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
