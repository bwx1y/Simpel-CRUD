<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Barang</title>
  </head>
  <body>
    <script>
      (async () => {
        const promis = confirm("apakah anda yakin ?");
        if (promis) {
          const response = await fetch("/delete/<%= data.id %>", {
            method: "DELETE",
            headers: {
              Accept: "application/json",
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              nama: "<%= data.namaBarang %>",
              harga: "<%= data.hargaBarang %>",
              jumlah: "<%= data.jumlahBarang %>",
            }),
          });
          const res = await response.json();

          alert(res.message);
        }
        window.location = "/";
      })();
    </script>
  </body>
</html>
